{{> user/header }}

     <!-- Navigation -->
    {{> user/top-nav }}

    <div class="row container-wrapper">

        <!-- book Content Column -->
        <div class="col-lg-8 bookDetails">

            <!-- Title -->
            <h1 class="mt-4 text-capitalize text-center">{{book.title}}</h1>
            <div class="bookDetails__Content">

                    <!-- Date/Time -->
                    <p>booked on {{book.creationDate}}</p>

                    <hr>

                    <div class="bookDetailsContent__ImageWrapper">
                        <img class="img-fluid rounded" src="{{book.image}}" alt="">
                    </div>

                    <hr>

                    <!-- book Content -->
                    <p class="lead">{{book.description}}</p>


                    <hr>

            </div>
     
            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/book/{{book.id}}" method="post" >
                        <div class="form-group">

            {{#if isUserLogged}}
                  <div> 
                    <textarea class="form-control" rows="3" name="commentBody"></textarea> </div>          
                        <input type="hidden" name="id" value="{{book.id}}" />
                    </div>
                            <button type="submit" class="btn btn-primary mt-4">Submit</button>

                         {{else}}
                <div class="commentsDisabled">  
                    <div class="commentsDisabled__Info fs-3"> You need to log in </div>
                    <textarea class="form-control" rows="3" name="commentBody" disabled></textarea> 
                     <input type="hidden" name="id" value="{{book.id}}" />
                    </div>
                            <button type="submit" disabled class="btn btn-primary mt-4">Submit</button>

                </div>
            {{/if}}                     
                    </form>
                </div>
            </div>

            <!-- Single Comment -->
              {{#each book.comments}}

                    {{#if commentIsApproved}}
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src={{this.image}} alt="">
                            <div class="media-body">
                                  <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                                    {{body}}
                             </div>
                        </div>
                    {{/if}}

            {{/each}}


        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4" style="margin-top: 180px;">

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4" style="display: none ;">
                <h5 class="card-header">additional info</h5>
                <div class="card-body">
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->