{{> admin/admin-header }}

   {{> admin/admin-topNav csrfToken=csrfToken name=name}}

<div class="row comments__wrapper" style="margin-top: 70px;">
    <div class="container">
        <div class="col-md-10 commentsTable__wrapper" style="margin: 0 auto;">
            <table class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                <tr>
                    <th>Id</th>
                    <th>Publisher</th>
                    <th>Approve Comments</th>
                    <th>Date</th>
                    <th>Comment Body</th>
                </tr>
                </thead>

                <tbody class="text-dark">
                {{#each comments}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td style="width: auto;">{{this.user.firstName}} {{this.user.lastName}}</td>
                        <td></td>
                        <td>{{this.date}}</td>
                        <td>{{this.body}}</td>
                    </tr>

                {{/each}}
                </tbody>


            </table>
        </div>
    </div>
</div>