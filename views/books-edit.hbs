<div class="container">

   <h2>Edit Book</h2>

   <div class="row p-4">
      <div class="col-md-10">
         <form action="/admin/books-edit/{{book.id}}?newMethod=PUT" method="post">

            <div class="form-group">
               <label for="title">Title</label>
               <input type="text" name="title" id="title" placeholder="title" value={{book.title}}>
            </div>

             <div class="form-group">
               <label for="file">Title</label>
               <input type="file" name="image" value={{book.image}} class="form-control" id="file">
            </div>

            <div class="form-group">
               <label for="status">status</label>
               <select name="status" id="status" class="form-control">
                  <option value="public">Public</option>
                  <option value="private">Private</option>
               </select>
            </div>

            <div class="form-check ml-3">
               <label for="allowComments">Allow Comments</label>
               <input type="checkbox"  class="form-control" id="allowComments" name="allowComments">
            </div>

        <!--    <div class="form-group">
               <label for="category">Category</label>
               <select name="category" id="category" class="form-control">
                  {{#select book.category}}
                        {{#each categories}}
                              <option value={{this.id}}>{{this.title}}</option>
                         {{/each}}
                  {{/select}}    
               </select>
            </div>
-->
            <div class="form-group">
               <label for="description">Content</label>
               <textarea name="description" id="description" class="form-control" placeholder="" rows="10">{{book.description}}</textarea>
               <button class="btn btn-outline-success btn-lg" type="submit">Add Edited</button>
            </div>
         </form>
      </div>
   </div>
</div>